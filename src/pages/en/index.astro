---
import MainLayout from '../../layouts/MainLayout.astro';
import Navbar from '../../components/Navbar.astro';
import Footer from '../../components/Footer.astro';
import DocCard from '../../components/DocCard.astro';

// Titre et description pour le SEO
const title = "Welcome to the Hub of Knowledge";
const description = "Explore FomaDev official documentations, libraries, and expert tech books.";
---

<MainLayout title={title} description={description}>
  
  <Navbar slot="header" />

  <section class="k-pt-5 k-pb-5 k-text-center" style="background: linear-gradient(180deg, #f8fafc 0%, #ffffff 100%); border-bottom: 1px solid #e2e8f0;">
    <div class="k-container">
      <h1 class="k-h1 k-mb-3">Master Your <span class="k-text-primary">Development</span> Skills</h1>
      <p class="k-mb-4 k-text-bold" style="color: #64748b; max-width: 600px; margin-left: auto; margin-right: auto;">
        Access high-quality documentation for FomaDev projects and curated resources for modern frameworks.
      </p>
      
      <div class="k-row k-justify-center">
        <div class="k-col-md-6">
          <div style="position: relative;">
            <input 
              type="text" 
              placeholder="Search for a library, book, or tutorial..." 
              style="width: 100%; padding: 1.2rem; border-radius: 50px; border: 2px solid #2563eb; font-size: 1rem; outline: none; box-shadow: 0 4px 6px -1px rgba(0,0,0,0.1);"
            />
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="k-container k-mt-5 k-mb-5">
    <div class="k-d-flex k-justify-between k-align-center k-mb-4">
      <h2 class="k-h2 k-m-0">Featured <span class="k-text-primary">Resources</span></h2>
      <a href="/fordima-academy/en/docs/" class="k-btn k-btn-outline k-btn-sm">View All</a>
    </div>

    <div class="k-row">
      <div class="k-col-md-4 k-mb-4">
        <div class="k-card">
          <div class="k-card-body">
            <h3 class="k-card-title">KitokoCSS</h3>
            <p class="k-card-text">The lightweight UI framework you're currently using. Build elegant interfaces fast.</p>
            <a href="https://github.com/fomadev/kitokocss" class="k-btn k-btn-primary">View GitHub</a>
          </div>
        </div>
      </div>

      <div class="k-col-md-4 k-mb-4">
        <div class="k-card" style="opacity: 0.8; border-style: dashed;">
          <div class="k-card-body">
            <h3 class="k-card-title">Kiva-DB <span style="font-size: 0.7rem; background: #eee; padding: 2px 5px; border-radius: 4px;">Soon</span></h3>
            <p class="k-card-text">A high-performance database system by FomaDev. Documentation is under construction.</p>
            <button class="k-btn k-btn-outline" disabled>Upcoming</button>
          </div>
        </div>
      </div>

      <div class="k-col-md-4 k-mb-4">
        <div class="k-card">
          <div class="k-card-body">
            <h3 class="k-card-title">Expert Django</h3>
            <p class="k-card-text">Complete guide to mastering Python's most powerful web framework.</p>
            <a href="#" class="k-btn k-btn-outline">Download PDF</a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <Footer slot="footer" />

</MainLayout>

<style>
  /* Animation légère sur les cartes */
  .k-card {
    transition: transform 0.3s ease;
  }
  .k-card:hover {
    transform: translateY(-10px);
  }
</style>