---
import MainLayout from '../../layouts/MainLayout.astro';
import Navbar from '../../components/Navbar.astro';
import Footer from '../../components/Footer.astro';
import DocCard from '../../components/DocCard.astro';

// Titre et description pour le SEO
const title = "Welcome to the Hub of Knowledge";
description = "Explore FomaDev official documentations, libraries, and expert tech books.";
---

<MainLayout title={title} description={description}>
  
  <Navbar slot="header" />

  <section class="k-pt-5 k-pb-5 k-text-center" style="background: linear-gradient(180deg, #f8fafc 0%, #ffffff 100%); border-bottom: 1px solid #e2e8f0;">
    <div class="k-container">
      <h1 class="k-h1 k-mb-3">Master Your <span class="k-text-primary">Development</span> Skills</h1>
      <p class="k-mb-4 k-text-bold" style="color: #64748b; max-width: 600px; margin-left: auto; margin-right: auto;">
        Access high-quality documentation for FomaDev projects and curated resources for modern frameworks.
      </p>
      
      <div class="k-row k-justify-center">
        <div class="k-col-md-6">
          <div style="position: relative;">
            <input 
              type="text" 
              placeholder="Search for a library, book, or tutorial..." 
              style="width: 100%; padding: 1.2rem; border-radius: 50px; border: 2px solid #2563eb; font-size: 1rem; outline: none; box-shadow: 0 4px 6px -1px rgba(0,0,0,0.1);"
            />
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="k-container k-mt-5 k-mb-5">
    <div class="k-d-flex k-justify-between k-align-center k-mb-4">
      <h2 class="k-h2 k-m-0">Featured <span class="k-text-primary">Resources</span></h2>
      <a href="/fordima-academy/en/docs/" class="k-btn k-btn-outline k-btn-sm">View All</a>
    </div>

    <div class="k-row">
      <div class="k-col-md-4 k-mb-4">
        <DocCard 
          title="KitokoCSS" 
          description="The lightweight UI framework for elegant interfaces." 
          type="library"
          link="https://github.com/fomadev/kitokocss"
          isExternal={true}
          badge="Stable"
        />
      </div>

      <div class="k-col-md-4 k-mb-4">
        <DocCard 
          title="Kiva-DB" 
          description="High-performance database system by FomaDev." 
          type="library"
          link="/en/docs/kiva-db/"
          badge="Beta"
        />
      </div>

      <div class="k-col-md-4 k-mb-4">
        <DocCard 
          title="Expert Django" 
          description="Complete guide to mastering Python's most powerful web framework." 
          type="book"
          link="#"
          badge="PDF"
        />
      </div>
    </div>
  </section>

  <Footer slot="footer" />

</MainLayout>

<style>
  /* Animation légère sur les cartes (s'applique aussi aux composants DocCard) */
  .k-card, :global(.k-card) {
    transition: transform 0.3s ease;
  }
  .k-card:hover, :global(.k-card:hover) {
    transform: translateY(-10px);
  }
</style>