---
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const year = new Date().getFullYear();
---

<footer class="footer-container k-py-5 k-mt-5">
  <div class="k-container">
    <div class="k-row">
      
      <div class="k-col-md-4 k-mb-4">
        <h3 class="footer-logo k-mb-3">FORDIMA <span class="k-text-primary">ACADEMY</span></h3>
        <p class="footer-description">
          {t('footer.madeBy')} <a href="https://github.com/fomadev" class="highlight-link">FomaDev</a>.
          <br />
          {t('footer.powered')} <span class="k-text-primary">KitokoCSS</span>.
        </p>
        <div class="social-links k-mt-3">
          <a href="https://facebook.com/profile.php?id=61585885667571" aria-label="Facebook" class="social-icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"></path></svg>
          </a>
          <a href="https://instagram.com/fomadev_" aria-label="Instagram" class="social-icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect><path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path><line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line></svg>
          </a>
          <a href="https://x.com/fomadev" aria-label="X" class="social-icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M4 4l11.733 16h4.267l-11.733-16zM4 20l6.768-6.768m2.46-2.46L20 4"></path>
            </svg>
          </a>
        </div>
      </div>

      <div class="k-col-md-4 k-mb-4">
        <h4 class="footer-heading">{t('footer.links')}</h4>
        <ul class="footer-list">
          <li><a href="https://github.com/fomadev/kitokocss" target="_blank">KitokoCSS Framework</a></li>
          <li><a href="#">FomaDev Projects</a></li>
          <li><a href="#">Open Source Community</a></li>
        </ul>
      </div>

      <div class="k-col-md-4 k-mb-4">
        <h4 class="footer-heading">{t('footer.contact')}</h4>
        <div class="contact-item">
          <div class="icon-box">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path><polyline points="22,6 12,13 2,6"></polyline></svg>
          </div>
          <a href="mailto:fordimaacademy@gmail.com" class="footer-email">fordimaacademy@gmail.com</a>
        </div>
      </div>

    </div>

    <div class="footer-bottom k-mt-5 k-pt-4">
      <div class="k-row k-align-items-center">
        <div class="k-col-md-6 k-text-center k-text-md-start">
          <p class="copyright">
            &copy; {year} <strong>Fordima Academy</strong>. All rights reserved.
          </p>
        </div>
        <div class="k-col-md-6 k-text-center k-text-md-end">
          <p class="spirit-text">
            Crafted with <span class="heart">‚ù§</span> in Lingala spirit ("<span class="kitoko-gradient">Kitoko</span>").
          </p>
        </div>
      </div>
    </div>
  </div>
</footer>

<style>
  /* Variables & Base */
  .footer-container {
    background: radial-gradient(circle at top right, #1e293b, #0f172a);
    color: #f8fafc;
    border-top: 4px solid #2563eb;
    font-family: 'Inter', sans-serif;
  }

  /* Typography */
  .footer-logo {
    font-weight: 800;
    letter-spacing: -0.5px;
    font-size: 1.5rem;
  }

  .footer-heading {
    font-size: 1.1rem;
    font-weight: 600;
    margin-bottom: 1.5rem;
    position: relative;
    padding-bottom: 10px;
  }

  .footer-heading::after {
    content: '';
    position: absolute;
    left: 0;
    bottom: 0;
    width: 30px;
    height: 2px;
    background-color: #2563eb;
  }

  .footer-description {
    color: #94a3b8;
    font-size: 0.95rem;
    line-height: 1.6;
  }

  /* Links & Lists */
  .footer-list {
    list-style: none;
    padding: 0;
  }

  .footer-list li {
    margin-bottom: 0.75rem;
  }

  .footer-list a, .highlight-link {
    color: #94a3b8;
    text-decoration: none;
    transition: all 0.3s ease;
    font-size: 0.95rem;
  }

  .footer-list a:hover {
    color: #2563eb;
    padding-left: 5px;
  }

  .highlight-link {
    color: #fff;
    font-weight: 600;
  }

  /* Contact & Icons */
  .contact-item {
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .icon-box {
    background: rgba(37, 99, 235, 0.1);
    color: #2563eb;
    padding: 8px;
    border-radius: 8px;
    display: flex;
  }

  .footer-email {
    color: #94a3b8;
    text-decoration: none;
    font-size: 0.95rem;
  }

  .social-links {
    display: flex;
    gap: 15px;
  }

  .social-icon {
    background: #1e293b;
    color: #f8fafc;
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    transition: all 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
  }

  .social-icon:hover {
    background: #2563eb;
    transform: translateY(-5px);
    color: white !important;
  }

  /* Bottom Bar */
  .footer-bottom {
    border-top: 1px solid rgba(148, 163, 184, 0.1);
  }

  .copyright {
    color: #64748b;
    font-size: 0.85rem;
  }

  .spirit-text {
    font-size: 0.85rem;
    color: #94a3b8;
  }

  .heart {
    color: #ef4444;
    display: inline-block;
    animation: pulse 1.5s infinite;
  }

  .kitoko-gradient {
    font-weight: bold;
    background: linear-gradient(45deg, #2563eb, #60a5fa);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  @keyframes pulse {
    0% { transform: scale(1); }
    50% { transform: scale(1.2); }
    100% { transform: scale(1); }
  }

  /* RTL Support */
  [dir="rtl"] .footer-heading::after {
    left: auto;
    right: 0;
  }
  [dir="rtl"] .footer-list a:hover {
    padding-left: 0;
    padding-right: 5px;
  }
</style>